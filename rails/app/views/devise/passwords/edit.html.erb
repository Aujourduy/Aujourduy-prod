<div class="card bg-base-100 shadow-xl max-w-md mx-auto">
  <div class="card-body">
    <div class="text-center mb-6">
      <h2 class="card-title text-2xl font-bold justify-center mb-2">Nouveau mot de passe</h2>
      <p class="text-base-content/70">Saisissez votre nouveau mot de passe</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-control mb-4">
        <div class="text-center mb-2">
          <%= f.label :password, class: "label-text text-lg font-semibold" do %>
            Nouveau mot de passe
          <% end %>
        </div>
        <div class="text-center text-sm text-base-content/60 mb-2">
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> caract√®res minimum)
          <% end %>
        </div>
        <%= f.password_field :password, 
            autofocus: true, 
            autocomplete: "new-password", 
            class: "input input-bordered w-full", 
            placeholder: "Entrez votre nouveau mot de passe" %>
      </div>

      <div class="form-control mb-6">
        <div class="text-center mb-2">
          <%= f.label :password_confirmation, class: "label-text text-lg font-semibold" do %>
            Confirmer le mot de passe
          <% end %>
        </div>
        <div class="text-center text-sm text-base-content/60 mb-2">
          Ressaisissez votre nouveau mot de passe
        </div>
        <%= f.password_field :password_confirmation, 
            autocomplete: "new-password", 
            class: "input input-bordered w-full", 
            placeholder: "Confirmez votre nouveau mot de passe" %>
      </div>

      <div class="form-control mb-4">
        <%= f.submit "Changer mon mot de passe", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="divider"></div>
    
    <div class="text-center">
      <div class="dropdown dropdown-top">
        <div tabindex="0" role="button" class="btn btn-outline btn-sm">
          Autres options
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 mb-2">
          <li><%= link_to "Log in", new_session_path(resource_name) %></li>
          <li><%= link_to "Sign up", new_registration_path(resource_name) %></li>
          <li><%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "text-red-500" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
