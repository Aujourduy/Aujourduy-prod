<div class="w-full max-w-md mx-auto bg-base-400 rounded-2xl shadow-lg p-8">
  <div class="flex justify-center mb-6">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", alt: "Stop & Dance", class: "h-12 w-auto" %>
    <% end %>
  </div>

  <h2 class="text-2xl font-bold text-center mb-6">Mot de passe oublié ?</h2>
  <p class="text-sm text-gray-600 text-center mb-6">
    Entre ton email pour recevoir un lien de réinitialisation.
  </p>

  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :post, local: true, html: { class: "space-y-4" }) do |f| %>
      <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, class: "input input-bordered w-full mt-1" %>
    </div>

    <%= f.submit "Envoyer les instructions", class: "btn btn-primary w-full" %>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "link link-primary" %>
    <span class="mx-2">|</span>
    <%= link_to "Créer un compte", new_registration_path(resource_name), class: "link link-primary" %>
  </div>
</div>