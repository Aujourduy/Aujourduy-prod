<div class="min-h-screen w-full py-10 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Card Teacher -->
    <div class="card-custom w-full max-w-md mx-auto">
    <% if notice %>
      <div class="mb-4 p-3 rounded bg-success/20 text-success text-sm">
        <%= notice %>
      </div>
    <% end %>
    
    <!-- Photo en haut -->
    <div class="flex justify-center mb-6">
      <div class="w-32 h-32 rounded-full overflow-hidden bg-base-300">
        <% if @teacher.photo_url %>
          <%= image_tag @teacher.photo_url(:large),
              alt: "Photo de #{@teacher.first_name}", class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center text-base-content/40">
            <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </div>
    </div>
    
    <h2 class="text-2xl font-bold text-center mb-6 text-base-content">
      <%= @teacher.first_name %> <%= @teacher.last_name %>
    </h2>
    
    <div class="space-y-4 text-base-content">
      <!-- Practices -->
      <% if @teacher.practices.any? %>
        <div>
          <p class="font-semibold text-primary mb-2">Pratiques :</p>
          <div class="flex flex-wrap gap-2">
            <% @teacher.practices.each do |practice| %>
              <span class="badge badge-primary badge-lg"><%= practice.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if @teacher.bio.present? %>
        <div>
          <p class="font-semibold text-primary mb-2">Biographie :</p>
          <p class="text-base-content/80 leading-relaxed"><%= @teacher.bio %></p>
        </div>
      <% end %>
      
      <% if @teacher.contact_email.present? %>
        <p>
          <span class="font-semibold text-primary">Email :</span> 
          <% if user_signed_in? && (current_user.admin? || @teacher.user == current_user) %>
            <span class="text-base-content/80"><%= @teacher.contact_email %></span>
          <% else %>
            <span class="text-base-content/40 italic">Privé</span>
          <% end %>
        </p>
      <% end %>
      
      <% if @teacher.phone.present? %>
        <p>
          <span class="font-semibold text-primary">Téléphone :</span> 
          <span class="text-base-content/80"><%= @teacher.phone %></span>
        </p>
      <% end %>
      
      <!-- URL de référence -->
      <% if @teacher.reference_url.present? %>
        <div>
          <p class="font-semibold text-primary mb-2">Site web :</p>
          <%= link_to @teacher.reference_url, @teacher.reference_url, 
              target: "_blank", 
              class: "text-secondary hover:underline break-all" %>
        </div>
      <% end %>
      
      <!-- URLs de scraping -->
      <% if @teacher.teacher_urls.any? %>
        <div>
          <p class="font-semibold text-primary mb-2">Sources de scraping :</p>
          <div class="space-y-2">
            <% @teacher.teacher_urls.each do |teacher_url| %>
              <div class="p-3 bg-base-200 rounded-lg">
                <div class="flex items-start justify-between gap-2">
                  <div class="flex-1 min-w-0">
                    <p class="font-medium text-sm">
                      <%= teacher_url.display_name %>
                    </p>
                    <p class="text-xs text-base-content/60 break-all mt-1">
                      <%= teacher_url.url %>
                    </p>
                    <div class="flex items-center gap-2 mt-2 text-xs">
                      <span class="badge badge-sm <%= teacher_url.is_active ? 'badge-success' : 'badge-error' %>">
                        <%= teacher_url.is_active ? 'Actif' : 'Inactif' %>
                      </span>
                      <% if teacher_url.last_scraped_at %>
                        <span class="text-base-content/60">
                          Scrapé il y a <%= teacher_url.days_since_scraping %> jour(s)
                        </span>
                      <% else %>
                        <span class="text-base-content/60">Jamais scrapé</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex flex-col space-y-2">
      <% if user_signed_in? && (current_user.admin? || @teacher.user == current_user) %>
        <%= link_to "Modifier", edit_teacher_path(@teacher), class: "btn btn-primary w-full" %>
        <%= button_to "Supprimer", @teacher, method: :delete, data: { turbo_confirm: "Supprimer ce professeur ?" }, class: "btn btn-error w-full" %>
      <% end %>
      <%= link_to "← Retour à la liste", teachers_path, class: "btn btn-secondary w-full" %>
    </div>
  </div>
  <!-- Fin Card Teacher -->

  <!-- Section Événements à venir -->
  <% if @upcoming_occurrences.any? %>
    <div class="mt-12">
      <h2 class="text-3xl font-bold mb-6 text-base-content">
        Événements à venir (<%= @upcoming_occurrences.count %>)
      </h2>

      <div class="space-y-4">
        <% @upcoming_occurrences.each do |occurrence| %>
          <%= render 'event_occurrences/card', occurrence: occurrence %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="mt-12 text-center">
      <p class="text-base-content/60 italic text-lg">Aucun événement à venir</p>
    </div>
  <% end %>
  <!-- Fin Section Événements -->

  </div>
</div>
