<div class="text-center mt-10">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">Bienvenue sur</h1>
    <h1 class="text-4xl font-bold" style="color: #EF8C1A;">Stop & Dance</h1>
  </div>
  
  <% if user_signed_in? %>
    <p class="mb-6">Connecté en tant que <strong>
    <br>
    <%= current_user.email %></strong></p>

    <% if current_user.admin? %>
      <div class="mb-8">
        <%= link_to "Admin", avo_path, class: "btn btn-warning" %>
      </div>
    <% end %>

    <!-- Section Événements -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Événements</h2>
      <div class="space-y-3">
        <%= link_to "Tous les Événements", events_path, class: "btn btn-secondary" %>
        <%= link_to "Mes Événements", events_path(filter: 'my'), class: "btn btn-outline btn-accent" %>
      </div>
    </div>
    
    <!-- Section Teachers -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Professeurs</h2>
      <div class="space-y-3">
        <%= link_to "Tous les Professeurs", teachers_path, class: "btn btn-primary" %>
        <%= link_to "Mes Professeurs", teachers_path(filter: 'my'), class: "btn btn-outline btn-primary" %>
      </div>
    </div>
    
    <!-- Section Pratiques -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Pratiques</h2>
      <div class="space-y-3">
        <%= link_to "Toutes les Pratiques", practices_path, class: "btn btn-info" %>
        <%= link_to "Mes Pratiques", practices_path(filter: 'my'), class: "btn btn-outline btn-secondary" %>
      </div>
    </div>
    

    

    
  <% else %>
    <p class="mb-6">Vous n'êtes pas connecté.</p>
    
    <!-- Section Événements pour non-connecté -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Événements</h2>
      <div class="space-y-3">
        <%= link_to "Voir tous les Événements", events_path, class: "btn btn-secondary" %>
      </div>
    </div>
    
    <!-- Section Teachers pour non-connecté -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Professeurs</h2>
      <div class="space-y-3">
        <%= link_to "Voir tous les Professeurs", teachers_path, class: "btn btn-primary" %>
      </div>
    </div>
    
    <!-- Section Pratiques pour non-connecté -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Pratiques</h2>
      <div class="space-y-3">
        <%= link_to "Voir toutes les Pratiques", practices_path, class: "btn btn-accent" %>
      </div>
    </div>
    

    
    <!-- Boutons de connexion -->
    <div class="mt-8 space-x-2">
      <%= link_to "Créer un compte", new_user_registration_path, class: "btn btn-success" %>
      <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>
