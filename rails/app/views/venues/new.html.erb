<div class="min-h-screen w-full flex items-center justify-center">
  <div class="w-full max-w-md mx-auto bg-base-400 rounded-2xl shadow-lg p-8">
    <div class="flex justify-center mb-6">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", alt: "Stop & Dance", class: "h-12 w-auto" %>
      <% end %>
    </div>

    <h2 class="text-2xl font-bold text-center mb-6">Créer un lieu</h2>

    <%= render "form", venue: @venue %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "← Retour à la liste des lieux", venues_path, class: "link link-primary" %>
    </div>
  </div>
</div>
