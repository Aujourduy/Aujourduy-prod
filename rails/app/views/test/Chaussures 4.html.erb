<div style="font-family: Arial, sans-serif; max-width: 1400px; margin: 0 auto; padding: 40px 20px; background: #fafafa;">
  
  <h1 style="text-align: center; color: #2f2f2f; font-size: 2.5rem; margin-bottom: 20px; font-weight: 700;">ğŸ‘Ÿ Palette Chaussures â€” Tons Naturels (Finale)</h1>
  <p style="text-align: center; color: #666; font-size: 1.1rem; margin-bottom: 50px;">Version finale avec Error rouge et Success distinct</p>

  <section style="background: white; border-radius: 16px; padding: 30px; box-shadow: 0 4px 20px rgba(0,0,0,0.08);">
    <h2 style="text-align: center; color: #2f2f2f; font-size: 1.8rem; margin-bottom: 30px; border-left: 5px solid #b8654d; padding-left: 15px;">Palette â€” Tons Naturels Finale</h2>
    
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
      <!-- Light -->
      <div style="background: #f9f9f9; border-radius: 12px; padding: 20px;">
        <h3 style="text-align: center; color: #333; font-size: 1.3rem; margin-bottom: 20px;">â˜€ï¸ Light Theme</h3>
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px;">
          <% [{name: "primary", color: "#b8654d", desc: "Terre brique"},
              {name: "secondary", color: "#7a8870", desc: "Olive"},
              {name: "accent", color: "#a85850", desc: "Brique"},
              {name: "neutral", color: "#5c4838", desc: "Brun"},
              {name: "base-100", color: "#f8f5f0", desc: "CrÃ¨me"},
              {name: "info", color: "#8b7a9d", desc: "Violet riche"},
              {name: "success", color: "#7aa868", desc: "Vert prairie"},
              {name: "warning", color: "#f2dd68", desc: "Jaune clair"},
              {name: "error", color: "#c04838", desc: "Rouge terre"}].
              each do |c| %>
            <div style="min-height: 100px; background-color:<%= c[:color] %>; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); 
                        display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 12px;
                        color: <%= ['#f8f5f0', '#f2dd68'].include?(c[:color]) ? '#2f2f2f' : '#fff' %>;">
              <div style="font-weight: 600; font-size: 0.75rem; text-transform: uppercase; margin-bottom: 3px;"><%= c[:name] %></div>
              <div style="font-size: 0.7rem; font-family: 'Courier New', monospace; margin-bottom: 3px;"><%= c[:color] %></div>
              <div style="font-size: 0.65rem; opacity: 0.8; font-style: italic;"><%= c[:desc] %></div>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Dark -->
      <div style="background: #2a2a2a; border-radius: 12px; padding: 20px;">
        <h3 style="text-align: center; color: #fff; font-size: 1.3rem; margin-bottom: 20px;">ğŸŒ™ Dark Theme</h3>
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px;">
          <% [{name: "primary", color: "#d98570", desc: "Terre brique clair"},
              {name: "secondary", color: "#95a888", desc: "Olive clair"},
              {name: "accent", color: "#d97060", desc: "Brique lumineux"},
              {name: "neutral", color: "#f0ebe3", desc: "Beige clair"},
              {name: "base-100", color: "#2a2420", desc: "Brun noir"},
              {name: "info", color: "#a895bf", desc: "Violet saturÃ©"},
              {name: "success", color: "#95c078", desc: "Vert prairie vif"},
              {name: "warning", color: "#f2e685", desc: "Jaune vif"},
              {name: "error", color: "#e86858", desc: "Rouge terre clair"}].
              each do |c| %>
            <div style="min-height: 100px; background-color:<%= c[:color] %>; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.3); 
                        display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 12px;
                        color: <%= ['#f0ebe3', '#a895bf', '#95c078', '#f2e685'].include?(c[:color]) ? '#2f2f2f' : '#fff' %>;">
              <div style="font-weight: 600; font-size: 0.75rem; text-transform: uppercase; margin-bottom: 3px;"><%= c[:name] %></div>
              <div style="font-size: 0.7rem; font-family: 'Courier New', monospace; margin-bottom: 3px;"><%= c[:color] %></div>
              <div style="font-size: 0.65rem; opacity: 0.8; font-style: italic;"><%= c[:desc] %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

</div>