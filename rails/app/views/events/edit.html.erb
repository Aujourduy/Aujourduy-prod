              <%= form.select :currency, 
                  options_for_select([['Euro (‚Ç¨)', 'EUR'], ['Dollar US ($)', 'USD'], ['Dollar Canadien (CA$)', 'CAD'], ['Franc Suisse (CHF)', 'CHF']], @event.currency),
