            <!-- Prix normal -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">Prix normal</span>
              </label>
              <%= form.number_field :price_normal, step: 0.01, min: 0, class: "input input-bordered" %>
            </div>

            <!-- Prix r√©duit -->
            <div class="form-control">
